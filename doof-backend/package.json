{
  "name": "doof-backend",
  "version": "1.0.0",
  "description": "Backend for Doof app",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "lint": "eslint . --ext js --max-warnings 0",
    "lint:fix": "eslint . --ext js --fix",
    "format": "prettier --write \"./**/*.js\" \"./**/*.json\" --ignore-path ../.gitignore",
    "format:check": "prettier --check \"./**/*.js\" \"./**/*.json\" --ignore-path ../.gitignore",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "express-validator": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.12.0",
    "pg-format": "^1.0.4",
    "pino-http": "^10.2.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^2.0.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "nodemon": "^3.1.4",
    "pino-pretty": "^11.2.1",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "vitest": "^2.0.5"
  },
  "author": "",
  "license": "ISC"
}