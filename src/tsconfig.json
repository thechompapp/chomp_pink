{
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "outDir": "./dist",
      "rootDir": "./",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "allowJs": true
      // No baseUrl or paths here
    },
    "include": [
      "**/*.ts",
      "**/*.js"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }