{
  "compilerOptions": {
    "target": "ES2020",                   // Or your desired ECMAScript target
    "module": "NodeNext",                 // Essential for Node.js ES Modules
    "moduleResolution": "NodeNext",       // Essential for Node.js ES Modules
    "allowJs": true,                      // Added: Allows importing .js files
    "baseUrl": ".",                       // Base directory for module resolution
    "outDir": "./dist",                   // Output directory for compiled JS
    "rootDir": ".",                       // Root directory of source files (relative to tsconfig.json)
    "esModuleInterop": true,              // Enables compatibility with CommonJS modules
    "forceConsistentCasingInFileNames": true, // Enforces consistent file casing
    "strict": true,                       // Enables all strict type-checking options
    "skipLibCheck": true,                 // Skips type checking of declaration files
    "resolveJsonModule": true,            // Allows importing .json files
    "sourceMap": true,                    // Generate source maps for debugging
    "declaration": true,                  // Generate corresponding '.d.ts' files
    "experimentalDecorators": true,       // Enable experimental decorators if used
    "emitDecoratorMetadata": true         // Emit design-type metadata for decorated declarations if used
  },
  "include": ["**/*.ts", "**/*.js"],      // Updated: Include both TS and JS files
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "**/*.test.ts"] // Exclude node_modules, output dir, and test files
}