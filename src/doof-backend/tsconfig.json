{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "baseUrl": "."
  },
  "include": [
    "**/*.ts",
    "**/*.js"
  ],
  // Removed "files" section since the file doesn't exist
  "exclude": [
    "node_modules",
    "dist"
  ]
}